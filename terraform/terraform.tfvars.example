# Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

aws_region  = "us-east-1"
environment = "dev"

# Cognito Configuration
allowed_email_domains = ["amalitech.com", "amalitechtraining.org"]
cognito_callback_urls = ["http://localhost:3000/callback"]
cognito_logout_urls   = ["http://localhost:3000/logout"]

# Email Configuration
ses_from_email = "noreply@amalitech.com"
admin_email    = "admin@amalitech.com"

# SNS Email Notifications
notification_emails = [
  "admin@amalitech.com",
  "manager@amalitech.com"
]

# CORS Configuration
cors_allowed_origins = ["http://localhost:3000"]

# Amplify Configuration (optional)
frontend_repository_url = "https://github.com/yourusername/your-frontend-repo"
github_access_token     = "your-github-token"
frontend_branch_name    = "main"